opam-version: "1"

package "ocamlfind" {
  version:    "1.3.1"
  maintainer: "contact@ocamlpro.com"
  build:      [
    [ "./configure"
        "-bindir"  "%{bin}%"
        "-sitelib" "%{lib}%"
        "-mandir"  "%{doc}%"
        "-config"  "%{lib}%/findlib.conf"
        "-no-topfind" ]
    [ "make" "all"]
    [ "make" "opt" ]
    [ "make" "install" ]
    [ "sed" "-i" "$ a\ldconf=\"ignore\"" "%{lib}%/findlib.conf" ]
  ]
}